<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <managed-bean>
            <managed-bean-name>Usuarios</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.UsuariosBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
            <managed-bean-name>Medico</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.MedicoBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
            <managed-bean-name>Paciente</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.PacienteBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
            <managed-bean-name>Agenda</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.AgendaBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
        <managed-bean>
            <managed-bean-name>Exame</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.ExameBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <!-- Regras de mapeamento para cadastro de agendas-->
    <navigation-rule>
            <from-view-id>/agenda/cadastroAgenda.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/agenda/cadastroAgenda.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>

    <!-- Regras de mapeamento para cadastro de exames-->
    <navigation-rule>
            <from-view-id>/exame/cadastroExame.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>/error</from-outcome>
                    <to-view-id>/exame/cadastroExame.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>
    
    <!-- Regras de mapeamento para cadastro de paciente-->
    <navigation-rule>
            <from-view-id>/paciente/listarPaciente.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok_alterar</from-outcome>
                    <to-view-id>/paciente/alterarPaciente.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
            <from-view-id>/paciente/alterarPaciente.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/paciente/listarPaciente.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>    
    <navigation-rule>
            <from-view-id>/paciente/pesquisarPaciente.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/paciente/resultado.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
            <from-view-id>/paciente/resultado.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/paciente/pesquisarPaciente.jsp</to-view-id>
            </navigation-case>
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/paciente/resultado.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
            <from-view-id>/paciente/cadastrarPaciente.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>
            </navigation-case>            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/paciente/cadastrarPaciente.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>    

    <!-- Regras de mapeamento para cadastro de médico-->
    <navigation-rule>
            <from-view-id>/medico/cadastroMedico.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/medico/cadastroMedico.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>
    
    <!-- Regras de mapeamento para cadastro de ussuários-->
    <navigation-rule>
            <from-view-id>/usuario/cadastroUsuarios.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/usuario/cadastroUsuarios.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>
    
    <!-- Regras de mapeamento para o logim de usuários-->
    <navigation-rule>
            <from-view-id>/index.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/index.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>

</faces-config>
