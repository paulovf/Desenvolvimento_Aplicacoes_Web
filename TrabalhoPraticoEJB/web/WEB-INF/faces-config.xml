<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <managed-bean>
            <managed-bean-name>Usuarios</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.UsuariosBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
            <managed-bean-name>Medico</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.MedicoBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
            <managed-bean-name>Paciente</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.PacienteBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
            <managed-bean-name>Agenda</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.AgendaBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
        <managed-bean>
            <managed-bean-name>AgendaPK</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.AgendaPKBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
        <managed-bean>
            <managed-bean-name>Exame</managed-bean-name>
            <managed-bean-class>br.java.tp.bean.ExameBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <!-- Regras de mapeamento para cadastro de agendas-->
    <navigation-rule>
            <from-view-id>/cadastroAgenda.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/cadastroAgenda.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>

    <!-- Regras de mapeamento para cadastro de exames-->
    <navigation-rule>
            <from-view-id>/cadastroExame.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/cadastroExame.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>
    
    <!-- Regras de mapeamento para cadastro de paciente-->
    <navigation-rule>
            <from-view-id>/cadastroPaciente.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/cadastroPaciente.jsp</to-view-id>
            </navigation-case>
    </navigation-rule> 

    <!-- Regras de mapeamento para cadastro de médico-->
    <navigation-rule>
            <from-view-id>/cadastroMedico.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/cadastroMedico.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>
    
    <!-- Regras de mapeamento para cadastro de ussuários-->
    <navigation-rule>
            <from-view-id>/cadastroUsuarios.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/cadastroUsuarios.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>
    
    <!-- Regras de mapeamento para o logim de usuários-->
    <navigation-rule>
            <from-view-id>/index.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/home.jsp</to-view-id>
            </navigation-case>
            
            <navigation-case>
                    <from-outcome>error</from-outcome>
                    <to-view-id>/index.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>

</faces-config>
