            <navigation-case>
                <from-outcome>login</from-outcome>
                <to-view-id>/index.jsp</to-view-id>
                <redirect></redirect>
            </navigation-case>             
    </navigation-rule>
   <navigation-rule>
            <from-view-id>/exame/pesquisarExame.jsp</from-view-id>
            <navigation-case>
                    <from-outcome>ok</from-outcome>
                    <to-view-id>/exame/resultado.jsp</to-view-id>
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
            <from-view-id>/exame/resultado.jsp</from-view-id>
